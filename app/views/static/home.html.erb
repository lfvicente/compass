<script>
    $('#datepicker').datepicker({

        format: "dd/mm/yyyy",
        weekStart: 1,
        todayBtn: true,
        language: "es",
        multidate: true,
        daysOfWeekDisabled: "0,6",
        daysOfWeekHighlighted: "1,2,3,4,5",
        calendarWeeks: true,
        todayHighlight: true,
        beforeShowDay: function (date) {
            if (date.getMonth() == (new Date()).getMonth())
                switch (date.getDay()) {
                    case 2:
                        return {
                            tooltip: 'Tutoría',
                            classes: 'active'
                        };
                    case 1:
                        return "green";
                }

        }
    });
</script>
